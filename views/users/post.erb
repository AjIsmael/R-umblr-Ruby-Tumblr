<div class="container post">
  <form class="" action="/users/post" method="post" enctype="multipart/form-data" accept="image/jpeg">
    <div class="form-group">
      <label>Title</label>
      <input type="text" class="form-control" name="title" placeholder="Title" required>
      <% if @alertTitle %>
      <small> The title can not be empty.</small>
      <% end %>
    </div>
    <div class="form-group">
      <label>Content</label>
      <textarea class="form-control" name="content" placeholder="Write your blog here" rows="8" cols="80" required></textarea>

      <% if @alertContent %>
      <small> The content can not be empty</small>
      <% end %>
    </div>
    <div class="form-group">
      <label>Image</label>
      <input type="file" name="image_url" class="form-control" accept = "image/*" placeholder="image_url">
      <% if @alertImage %>
      <small> Invalid image. It must be an image file like Jpg/Jpeg/Png and the size must be less than 500KB</small>
      <% end %>
    </div>
    <button type="submit" class="btn btn-primary">Post</button>

  </form>

</div>
